    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:resizeableActivity="false"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.SweetlyByRaffCodeGallery"
        tools:targetApi="31">
        <activity
            android:name=".MusicZone"
            android:exported="false" />
        <activity
            android:name=".YoutubeActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignInActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RecycleLayout"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MoodLevelActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MoodBoosterResultActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MoodBoosterFormActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BirthdayGenActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AboutDeveloperActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
    </application>

</manifest>